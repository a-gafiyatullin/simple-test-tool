<STT>
    <Module Name="Module1">
        <Dependencies>
            <Dependency Name = "Module2.so" Path = "Module1/" />
            <Dependency Name = "Module3.a" Path = "Module1/" />
        </Dependencies>

        <Outputs>
            <Output Name = "Module1.exe" Path = "Module1/" />
        </Outputs>

        <Stages>
            <Build Type = "CMake" Path = "Module1/" LogEnable = "On"
                   LogName = "build.log" LogPath = "Module1/" InterruptOnFail = "On" />

            <VCS Type = "Git" LogEnable = "On" LogName = "vcs.log" LogPath = "Module1/" InterruptOnFail = "On">
                <Path Path = "Module1/" />
            </VCS>

            <Test LogEnable = "On" LogName = "test.log" LogPath = "Module1/" InterruptOnFail = "On">
                <Path Path = "Module1/test/test_tool1.sh" />
                <Path Path = "Module1/test/test_tool2.sh" />
            </Test>
        </Stages>
    </Module>

    <Module Name="Module2">
        <Dependencies>
            <Dependency Name = "Module3.a" Path = "Module2/" />
        </Dependencies>

        <Outputs>
            <Output Name = "Module2.so" Path = "Module2/" />
        </Outputs>

        <Stages>
            <Build Type = "Make" Path = "Module2/" LogEnable = "Off" InterruptOnFail = "On" />

            <VCS Type = "SVN" LogEnable = "On" LogName = "vcs.log" LogPath = "Module2/" InterruptOnFail = "Off">
                <Path Path = "Module2/" />
            </VCS>

            <Test LogEnable = "Off" InterruptOnFail = "On">
                <Path Path = "Module2/test/test_tool1.sh" />
                <Path Path = "Module2/test/test_tool2.sh" />
            </Test>
        </Stages>
    </Module>

    <Module Name="Module3">
        <Outputs>
            <Output Name = "Module3.a" Path = "Module3/" />
        </Outputs>

        <Stages>
            <Build Type = "Make" Path = "Module3/" LogEnable = "Off" InterruptOnFail = "On" />
        </Stages>
    </Module>
</STT>